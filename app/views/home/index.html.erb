<script>
   $(document).ready(function(){
      $("#foo2").carouFredSel({
         auto: false
      })
   });

   $(document).on('mouseover', '#foo2_prev, #foo2_next', function() {
      var direction = "right";
      if($(this).attr('id') == "foo2_prev"){
        direction = "left"
      }
      $("#foo2").carouFredSel({
         circular: true,
         infinite: true,
         auto    : true,
         pagination  : "#foo2_pag",
         scroll: {
            duration: 0.2
         },
         direction: direction
      });
   });

   $(document).on('mouseout', '#foo2_prev, #foo2_next', function() {
      $("#foo2").carouFredSel({
         auto: false
      })
   })
	
	$(document).on('mouseover', '.caroufredsel_wrapper a img', function() {
